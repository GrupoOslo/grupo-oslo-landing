---
import BurgerMenu from '../components/BurgerMenu';
import Logo from '../components/Logo.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />   
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Navbar visible solo en pantallas grandes -->
    <div class="hidden lg:block">
      <Navbar />
    </div>

		<div class="hidden lg:block">
			<Logo />
		</div>

    <!-- BurgerMenu visible solo en pantallas pequeñas -->
    <div class="block lg:hidden fixed top-0 right-0 w-full z-50">
      <BurgerMenu  client:load/>
    </div>

    <slot />
		<section id="footer">
			<footer class="bg-greyoslodark p-4 py-40 relative">
				<div class="w-full h-[500px] absolute top-[-250px] left-0 rounded-lg p-4">
					<img src="images/SUM-Salon-Gourmet.jpg" alt="" class="object-cover w-full h-full rounded-lg">
				</div>
				<div class="flex justify-center my-32">
					<img src="logos/Logos-03.png" alt="" class="logo-invert w-20">
					<p class="text-white text-2xl p-2">LET´S WORK TOGETHER</p>
				</div>
				<div class="flex mb-20">
					<div id="contacto" class="text-white text-xs pe-6">
						<ul>
							<li><p>GRUPO OSLO</p></li>
							<li><p>+54 (11) 5236-0400</p></li>
							<li><p>Av. del Libertador 5936 12°B</p></li>
						</ul>			
					</div>
					<div id="links" class="text-white pe-6 text-xs">
						<ul>
							<li><a href="#">HOME</a></li>
							<li><a href="#">MANIFIESTO</a></li>
							<li><a href="#">UNIDADES</a></li>
							<li><a href="#">EQUIPO</a></li>
							<li><a href="#">PARTNERS</a></li>
						</ul>		
					</div>
					<div id="social" class="text-white">
						<a href="#">LINKEDIN</a>
					</div>
			
				</div>
				<div id="logo-footer">
					<img src="logos/Logos-02.png" alt="" class="logo-invert">
				</div>
			</footer>
		</section>
  </body>
</html>

<style>
	@font-face {
		font-family: 'ManropeBold';
		src: url('/fonts/Manrope-Bold.woff2') format('woff2'),
				url('/fonts/Manrope-Bold.woff') format('woff'),
				url('/fonts/Manrope-Bold.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'ManropeMedium';
		src: url('/fonts/Manrope-Medium.woff2') format('woff2'),
				url('/fonts/Manrope-Medium.woff') format('woff'),
				url('/fonts/Manrope-Medium.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'ManropeItalic';
		src: url('/fonts/Manrope-Medium.woff2') format('woff2'),
				url('/fonts/Manrope-Medium.woff') format('woff'),
				url('/fonts/Manrope-Medium.ttf') format('truetype');
		font-weight: normal;
		font-style: italic;
	}
	@font-face {
		font-family: 'IvyPrestoTextSemiBold';
		src: url('/fonts/IvyPrestoText-SemiBold.woff2') format('woff2'),
				url('/fonts/IvyPrestoText-SemiBold.woff') format('woff');
				/* url('/fonts/Manrope-Bold.ttf') format('truetype'); */
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'IvyPrestoTextLight';
		src: url('/fonts/IvyPrestoDisplay-Light.woff2') format('woff2'),
				url('/fonts/IvyPrestoDisplay-Light.woff') format('woff');
				/* url('/fonts/Manrope-Bold.ttf') format('truetype'); */
		font-weight: normal;
		font-style: normal;
	}
	@font-face {
		font-family: 'IvyPrestoTextLightItalic';
		src: url('/fonts/IvyPrestoDisplay-LightItalic.woff2') format('woff2'),
				url('/fonts/IvyPrestoDisplay-LightItalic.woff') format('woff');
				/* url('/fonts/Manrope-Bold.ttf') format('truetype'); */
		font-weight: normal;
		font-style: normal;
	}
	html {
		font-family: 'ManropeMedium', sans-serif;
		font-weight: medium;
		scroll-behavior: smooth;
	}
</style>
<style is:global>
	.text-ivydisplay {
		font-family: 'IvyPrestoTextLightItalic', sans-serif;
		font-weight: 500;
	}
	.text-manrope {
		font-family: 'ManropeMedium', sans-serif;
		font-weight: medium;
	}
	.text-maropebold {
		font-family: 'ManropeBold', sans-serif;
		font-weight: bold;
	}
	.logo-invert {
		filter: invert(1);
	}
</style>